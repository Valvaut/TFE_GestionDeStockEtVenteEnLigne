@model TFE_GestionDeStockEtVenteEnLigne.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Mail)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Mail)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Domicile)
        </dt>

        @foreach (var item in Model.Domicile)
        {
            <dd>
                @Html.DisplayFor(modelItem => item.Adresse.Rue)
                @Html.DisplayFor(modelItem => item.Adresse.Numero)
                @Html.DisplayFor(modelItem => item.Adresse.NumeroBoite)
                @Html.DisplayFor(modelItem => item.Adresse.Comune)
                @Html.DisplayFor(modelItem => item.Adresse.CodePostal)
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.NumTva)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumTva)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Tel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Tel)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroClient)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroClient)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                DateCommade
            </th>
            <th>
                EnCours
            </th>
            <th>
                Envoie
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model.Commande)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => c.DateCommade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => c.EnCours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => c.Envoie)
            </td>
            <td>
                <a asp-controller="Commandes" asp-action="Details" asp-route-id="@c.ID">Details</a> 
            </td>
        </tr>
     }
        
    </tbody>
</table>
<div>
