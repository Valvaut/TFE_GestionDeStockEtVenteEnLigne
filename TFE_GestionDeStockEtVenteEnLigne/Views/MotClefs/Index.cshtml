@model IEnumerable<TFE_GestionDeStockEtVenteEnLigne.Models.MotClef>

@{
    ViewData["Title"] = "Index";
}

<h2>Mots Clés</h2>

<p>
    <a asp-action="Create">Nouveau</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Valeur)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valeur)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edition</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Suppression</a>
            </td>
        </tr>
}
    </tbody>
</table>
