@model IEnumerable<TFE_GestionDeStockEtVenteEnLigne.Models.Metier.Historique>

@{
    ViewData["Title"] = "Index";
}

<h2>Historique</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QteStock)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Action)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.QteMouv)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Produit)
            </th>
