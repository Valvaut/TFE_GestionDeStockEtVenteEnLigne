@model TFE_GestionDeStockEtVenteEnLigne.Models.Adaptateur.RepresentantAdaptateur

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Representant</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Representant.Prenom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Representant.Prenom" class="form-control" />
                <span asp-validation-for="Representant.Prenom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Representant.Nom" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Representant.Nom" class="form-control" />
                <span asp-validation-for="Representant.Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Representant.Mail" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Representant.Mail" class="form-control" />
                <span asp-validation-for="Representant.Mail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Representant.GSM" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Representant.GSM" class="form-control" />
                <span asp-validation-for="Representant.GSM" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Representant.RepHabite" class="col-md-2 control-label"></label>
            <div class="col-md-10 multiselect">
                <div class="tab-pane">
                    @if (Model.ListAdresse.Count > 0)
                    {
                        @foreach (var item in Model.ListAdresse)
                        {
                            <input type=checkbox name="addresse" value="@item.ID"> @item.Numero @item.NumeroBoite @item.Rue  @item.Localite<br /> @item.CodePostal  @item.Comune<br />
                            <br />
                        }
                    }
                    else
                    {
                        <span>Aucune addresse trouver!</span>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ListFournisseur" class="col-md-2 control-label"></label>
            <div class="col-md-10 multiselect">
                <div class="tab-pane">
                    @if (Model.ListFournisseur.Count > 0)
                    {
                        @foreach (var item in Model.ListFournisseur)
                        {
                            <input type=checkbox name="fournisseur" value="@item.ID">@item.Nom
                            <br />
                        }
                    }
                    else
                    {
                        <span>Aucun fournisseur trouver!</span>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
